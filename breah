  <style>
    body{margin:0;font-family:Arial;background:#0b1220;color:#fff}
    header{padding:18px 20px;border-bottom:1px solid rgba(255,255,255,.12);display:flex;justify-content:space-between;align-items:center;gap:12px;flex-wrap:wrap}
    .brand{font-size:18px;font-weight:700}
    .wrap{max-width:1050px;margin:0 auto;padding:20px}
    .grid{display:grid;grid-template-columns:1.1fr .9fr;gap:16px}
    @media (max-width:900px){.grid{grid-template-columns:1fr}}
    .card{background:rgba(255,255,255,.06);border:1px solid rgba(255,255,255,.12);border-radius:16px;padding:16px}
    label{display:block;margin:10px 0 6px;font-size:14px;opacity:.9}
    input,select{width:100%;padding:12px;border-radius:12px;border:1px solid rgba(255,255,255,.18);background:rgba(0,0,0,.25);color:#fff;outline:none}
    button{width:100%;padding:12px;border-radius:12px;border:0;background:#fff;color:#000;font-weight:700;cursor:pointer;margin-top:12px}
    button:disabled{opacity:.5;cursor:not-allowed}
    .hint{font-size:13px;opacity:.75;line-height:1.7}
    .seats{display:grid;grid-template-columns:repeat(10,1fr);gap:8px;margin-top:12px}
    .seat{padding:10px 0;border-radius:10px;text-align:center;font-size:12px;border:1px solid rgba(255,255,255,.18);background:rgba(0,0,0,.22);cursor:pointer;user-select:none}
    .seat.selected{outline:2px solid #fff}
    .seat.booked{opacity:.35;cursor:not-allowed;text-decoration:line-through}
